<div id="<%= dom_id product %>", class="d-flex border">
  <div class="ms-2 mt-2 shadow mb-2">
    <p>
      <%= image_tag product.image_url, size: "150x250" %>
    </p>
  </div>
  <div class="ms-3">
    <p>
      <%= product.title %>
    </p>

    <p class="me-2">
      <%= product.description %>
    </p>
    
    <div class="d-flex align-items-center">
      <p class="text-success me-2 mb-0">
        <strong>Price:</strong>
        <%= number_to_currency(product.price) %>
      </p>
      <%= button_to "Add to cart", line_items_path(product_id: product.id), class: "btn btn-success btn-sm" %>
    </div>
  </div>


</div>
